generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guilds {
  id Int @id @default(autoincrement())
  guild_owner String @default("")
  guild_name String @default("")
  guild_id String @default("")
}

model GuildSettings {
  id Int @id @default(autoincrement())
  guild_id String
  global_stats Boolean @default(false)
  starting_credits Int @default(500)
  join_roles String[] @default([])
}

model GuildWelcomeGoodbye {
  id Int @id @default(autoincrement())
  guild_id String
  channel_id String
  welcome String
  goodbye String
  enabled Boolean @default(true)
}

model GuildLevelRewards {
  id Int @id @default(autoincrement())
  guild_id String
  level_json String
  enabled Boolean @default(true)
}

model GuildTrivia {
  id Int @id @default(autoincrement())
  guild_id String
  questions String @default("[]")
  enabled Boolean @default(true)
}

model GuildUsers {
  id Int @id @default(autoincrement())
  guild_id String 
  inventory String @default("{}")
  xp Int @default(0)
  level Int @default(1)
  user_id String
  credits Int @default(0)
}

model GuildTrade {
  id Int @id @default(autoincrement())
  user_id String
  partner_id String
  user_items String[] @default([])
  partner_items String[] @default([])
  user_confirmed Boolean @default(false)
  partner_confirmed Boolean @default(false)
  trade_complete Boolean @default(false)
  completed DateTime @default(now())
  guild_id String
}

model Users {
  id Int @id @default(autoincrement())
  discord_id String
  token String 
  username String
  avatar_url String
  joined DateTime @default(now())
  supporter Boolean @default(false)
}

model Staff {
  id Int @id @default(autoincrement())
  user_id Int
  tag String
  permissions Int
}

model ItemStore {
  id Int @id @default(autoincrement())
  global_sale Decimal @default(0)
  total_credits_spent Int @default(0)
  total_money_spent Int @default(0)
  total_transactions Int @default(0)
}

model ItemStoreEntry {
  id Int @id @default(autoincrement())
  credit_price Int
  money_price Int
  name String
  item_id String
  thumbnail String
  description String
  stock Int @default(10000)
  sold Int @default(0)
  sale Decimal @default(0)
  premium Boolean @default(false)
}

model NewsArticle {
  id Int @id @default(autoincrement())
  title String
  body String
  author_id Int
  posted DateTime @default(now())
  updated DateTime @default(now())
}